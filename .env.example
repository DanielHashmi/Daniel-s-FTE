# Environment Configuration Template
# Copy this file to .env and fill in your credentials

# ============================================
# SYSTEM CONFIGURATION
# ============================================

# Dry run mode (true = no real actions taken, false = production mode)
DRY_RUN=true

# ============================================
# VAULT CONFIGURATION
# ============================================

# Vault root directory (default: AI_Employee_Vault)
# VAULT_ROOT=AI_Employee_Vault

# ============================================
# GMAIL WATCHER CONFIGURATION
# ============================================

# Path to Gmail OAuth token file
GMAIL_TOKEN_PATH=./gmail_token.json

# Path to Gmail OAuth credentials file
GMAIL_CREDENTIALS_PATH=./credentials.json

# Gmail watcher poll interval (seconds)
GMAIL_INTERVAL=60

# ============================================
# WHATSAPP WATCHER CONFIGURATION
# ============================================

# WhatsApp session directory (stores login session)
WHATSAPP_SESSION_DIR=./whatsapp_session

# Run WhatsApp in headless mode (true = no browser window, false = show browser)
WHATSAPP_HEADLESS=true

# WhatsApp watcher poll interval (seconds)
WHATSAPP_INTERVAL=60

# ============================================
# LINKEDIN WATCHER CONFIGURATION
# ============================================

# LinkedIn access token (if available)
LINKEDIN_ACCESS_TOKEN=

# LinkedIn watcher poll interval (seconds)
LINKEDIN_INTERVAL=300

# ============================================
# ORCHESTRATOR CONFIGURATION
# ============================================

# Main orchestrator poll interval (seconds)
ORCHESTRATOR_POLL_INTERVAL=5

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=60

# Dashboard update interval (seconds)
DASHBOARD_UPDATE_INTERVAL=30

# ============================================
# LOGGING CONFIGURATION
# ============================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ============================================
# SECURITY CONFIGURATION
# ============================================

# Require approval for email sending (true/false)
REQUIRE_EMAIL_APPROVAL=true

# Require approval for social media posting (true/false)
REQUIRE_SOCIAL_APPROVAL=true

# Require approval for financial actions (true/false)
REQUIRE_FINANCIAL_APPROVAL=true
