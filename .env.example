# Vault Configuration
VAULT_PATH=AI_Employee_Vault

# Watcher Configuration
WATCHER_TYPE=filesystem  # Options: filesystem, gmail
WATCHER_CHECK_INTERVAL=60  # Seconds between checks

# Gmail Watcher Configuration (if using Gmail)
# GMAIL_CREDENTIALS_PATH=credentials.json
# GMAIL_TOKEN_PATH=token.json
# GMAIL_QUERY=is:unread (urgent OR invoice OR payment)

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_RETENTION_DAYS=90

# Development Mode
DRY_RUN=false  # Set to true for testing without side effects

# Performance Settings
MAX_MEMORY_MB=50  # Maximum memory for watcher process
